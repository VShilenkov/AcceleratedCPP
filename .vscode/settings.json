{
    //"cmake.cmakePath"     : "${workspaceFolder}/.vscode/cmake_${command:cmake.buildKit}",
    //"cmake.buildDirectory": "${workspaceFolder}/build_${buildKit}/${buildType}",
    "C_Cpp.default.compileCommands": "${workspaceFolder}/compile_commands.json",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

    "cmake.configureArgs": [
//        "--debug-find"
    ],
    "cmake.configureSettings": {
        "CMAKE_VERBOSE_MAKEFILE": "false",
        "ENGINEERING_BUILD"     : "false",
        "WITH_UNIT_TEST"        : "false",
        "WITH_COVERAGE"         : "false",
        "WITH_IWYU"             : "false",
        "WITH_CLANG_TIDY"       : "false",
        "WITH_CPPCHECK"         : "false"
    },

    "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",

    "cmake.enabledOutputParsers": [
        "cmake",
        "gcc",
        "gnuld",
//        "msvc",
//        "ghs",
//        "diab"
    ],
    "cSpell.language": "en,ru",
    "files.associations": {
        "algorithm": "cpp",
        "iomanip": "cpp",
        "cstdlib": "cpp",
        "iosfwd": "cpp"
    },
    "clang-tidy.executable": "clang-tidy-15",
    "clang-tidy.buildPath": "build",
    "cSpell.words": [
        "Кёниг"
    ]
}