{
    "cmake.buildDirectory": "${workspaceRoot}/build/${buildKit}/${generator}/${buildType}",
    "cmake.configureOnOpen": true,

    "editor.emptySelectionClipboard": false,
    "editor.mouseWheelZoom"         : true,
